{
  "name": "@roadsyster/server",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "db:generate": "pnpm --env-file=.env drizzle-kit generate",
    "db:migrate": "pnpm --env-file=.env drizzle-kit migrate",
    "db:push": "pnpm --env-file=.env drizzle-kit push",
    "db:pull": "pnpm --env-file=.env drizzle-kit pull",
    "db:studio": "pnpm --env-file=.env drizzle-kit studio"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@hono/node-server": "^1.19.9",
    "@t3-oss/env-core": "^0.13.10",
    "better-auth": "^1.4.15",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.1",
    "hono": "^4.11.4",
    "pg": "^8.17.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@roadsyster/eslint-config": "workspace:*",
    "@roadsyster/typescript-config": "workspace:*",
    "@types/node": "^22.19.7",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "tsx": "^4.21.0",
    "typescript": "5.9.2"
  }
}
